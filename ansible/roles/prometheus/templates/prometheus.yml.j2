global:
  scrape_interval: 10s

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: "nodes"
    static_configs:
      - targets: {{ groups['all'] | map('extract', hostvars, ['inventory_hostname']) | map('regex_replace', '(.*)', '\\1:9100') | list | to_json }}

